# API Keys for LLMs
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=True
LOG_LEVEL=INFO

# Security Configuration
SECRET_KEY=generate_a_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=60

# VM Configuration
VM_POOL_SIZE=5
VM_IDLE_TIMEOUT_MINUTES=30
VM_CPU_LIMIT=2
VM_MEMORY_LIMIT_MB=4096
VM_DISK_SIZE_GB=20
VM_BASE_IMAGE_ID=ubuntu-22.04-agent-v1
VM_PROVIDER=aws  # Options: aws, gcp, azure, docker
VM_REGION=us-west-2

# VM Network Configuration
VM_SUBNET_ID=subnet-12345
VM_SECURITY_GROUP_ID=sg-12345
VM_ASSIGN_PUBLIC_IP=True

# Feature Flags
ENABLE_BROWSER_AUTOMATION=True
ENABLE_TERMINAL_EXECUTION=True
ENABLE_SELF_VERIFICATION=True

# Model Configuration
DEFAULT_MODEL_PROVIDER=openai
DEFAULT_MODEL=gpt-4
FALLBACK_MODEL=gpt-3.5-turbo
MODEL_MAX_TOKENS=8192
MODEL_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=3600